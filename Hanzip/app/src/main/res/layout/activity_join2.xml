<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.JoinActivity2">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/signuptitle"
        android:layout_width="90dp"
        android:layout_height="50dp" />


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/input_age"
            android:textSize="13dp"
            android:layout_width="300dp"
            android:layout_height="50dp" />

        <EditText
            android:background="@null"
            android:id="@+id/nuser_age"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/input_addr"
            android:textSize="13dp"
            android:layout_width="300dp"
            android:layout_height="50dp" />

        <EditText
            android:background="@null"
            android:id="@+id/nuser_addr"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/gender"
            android:textSize="13dp"
            android:layout_width="80dp"
            android:layout_height="50dp" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/a_man"
            android:id="@+id/nuser_m"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/a_woman"
            android:id="@+id/nuser_w"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/bun"
            android:textSize="13dp"
            android:layout_width="80dp"
            android:layout_height="50dp" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/a_young"
            android:id="@+id/nuser_y"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:scaleType="fitXY" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/a_old"
            android:id="@+id/nuser_o"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:scaleType="fitXY" />
    </RelativeLayout>


    <Button
        android:background="@drawable/sign"
        android:id="@+id/join"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="60dp" />

</LinearLayout>